<ns1:Script name="Base Test" xmlns:ns1="http://www.testfw.org/schema/V1">
    <Tag>login</Tag>
    <Tag>website</Tag>
    <Tag>mercury</Tag>
    <Setup type="org.mash.harness.DBSetupHarness">
        <Configuration name="clean">
            <Value>true</Value>
        </Configuration>
        <Parameter name="loadfile" file="db_load.xml">
            <Replace search="VARIABLE">
                <Value>sometext</Value>
            </Replace>
        </Parameter>
    </Setup>
    <Run type="org.mash.harness.HttpRunHarness" name="login">
        <Configuration name="url" property="mercury.url"/>
        <Configuration name="type">
            <Value>POST</Value>
        </Configuration>
        <Parameter name="username">
            <Value>testuser</Value>
        </Parameter>
        <Parameter name="password">
            <Value>pass</Value>
        </Parameter>
    </Run>
    <Verify type="org.mash.harness.HttpVerifyHarness">
        <Configuration name="status">
            <Value>200</Value>
        </Configuration>
        <Configuration name="title">
            <Value>Ensenda:Tracking</Value>
        </Configuration>
        <Configuration name="contains">
            <Value>Enter your order number</Value>
        </Configuration>
        <Parameter name="do_search">
            <Value>1</Value>
        </Parameter>
    </Verify>
    <Run type="org.mash.harness.HttpRunHarness">
        <Configuration name="url" property="mercury.url">
            <Value>/index.html</Value>
        </Configuration>
        <Configuration name="type">
            <Value>GET</Value>
        </Configuration>
        <Parameter name="session">
            <Response name="login">session</Response>
        </Parameter>
    </Run>

</ns1:Script>
